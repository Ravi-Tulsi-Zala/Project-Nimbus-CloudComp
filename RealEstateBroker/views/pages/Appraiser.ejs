<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        getData();
    });

    function getData() {
        $.ajax({
            type: "GET",
            contentType: "application/json",
            dataType: "json",
            url: "http://localhost:3000/getREData",
            beforeSend: function () {

            },
            success: function (response) {
                if (response['errorPresent']) {
                    alert('Something went wrong while fetching data.');
                    window.location.href = "/";    
                }
                else {
                    loadData(response['data']);
                }   
            },
            error: function() {
                alert('We are facing server issue. Please try again later.');
                window.location.href = "/";
            }
        });
    }

    function loadData(response) {
        $('#RETable tbody').html("");
        var tbody = '';
        if(response.length!=0){
        // console.log("response", response)
        for (let index = 0; index < response.length; index++) {
            if (response[index] != null) {
                tbody += '<tr>><td>' + response[index].MlsID + '</td>';
                tbody += '<td><input type="number" name = "value" placeholder = "Enter Value" id="value' + index + '"required></td>';
                tbody += '<td><input type="submit" id="INSinc' + index + '" onClick = "updatedValue(this)"></td>';
                tbody += '</tr>';
            }
            $("#appraiserValue" + index).submit(function () {
                console.log("ajax called");
                console.log("value entered", $("#value" + index).val());
                console.log("msid", response[index].MlsID);

            })
        }
    }
    else{
        tbody += '<tr>';
        tbody += '<td align="center" colspan=3><b>No records found</b></td>';
        tbody += '</tr>';
    }
        $('#RETable tbody').append(tbody);
    }


    function updatedValue(row) {

        var MSID = $(row).parent().siblings()[0].innerHTML;
        var value = $($(row).parent().siblings()[1]).find('input').val();

        $.ajax({
            type: "POST",
            url: 'http://localhost:3000/updateREData',
            data: {
                'value': value,
                'id': MSID,
            },
            async: false,
            beforeSend: function () {

            },
            success: function (response) {
                if (response['error_message']) {
                    alert(response['error_message']);
                }
                else {
                    response.forEach(element => {
                        $.ajax({
                            type: "POST",
                            // UELI URL
                            url: 'http://localhost:3000/insuranceQuote',
                            data: {
                                'MlsID': element.MlsID,
                                'MortID': element.MortgageID,
                                'AppraisalValue': element.Value,
                                'FullName': element.Name
                            },
                            async: false,
                            beforeSend: function () {

                            },
                            success: function(INSincResponse) {
                                console.log("INSincResponse: ", INSincResponse);
                            },
                            error: function(error){
                                console.log("Error: ", error);
                            }
                        }); 
                    });
                    location.reload();
                }
            },
            error: function() {
                alert('We are facing server issue. Please try again later.');
                window.location.href = "/";
            }
        })
    }
</script>

